            android:layout_height="match_parent"
            android:id="@+id/text5" />
        <ImageButton
            android:src="@drawable/i6"
            android:tag="i6"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:onClick="SetPaintTexture"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/text6" />
        <ImageButton
