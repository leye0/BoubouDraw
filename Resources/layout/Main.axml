            android:layout_height="match_parent"
            android:id="@+id/text2" />
        <ImageButton
            android:src="@drawable/i3"
            android:tag="i3"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:onClick="SetPaintTexture"
            android:layout_weight="1"
