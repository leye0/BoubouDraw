            android:id="@+id/text14" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:orientation="vertical"
            android:layout_width="@dimen/btn_w"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/vMenu"
                android:background="@android:color/white"
                android:layout_width="@dimen/btn_w"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:src="@drawable/brush"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="pencil"
                    android:padding="0dp"
                    android:onClick="SetShape"
                    android:id="@+id/shape0"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false" />
                <ImageButton
                    android:src="@drawable/circle"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="circle"
                    android:padding="0dp"
                    android:onClick="SetShape"
                    android:id="@+id/shape1" />
                <ImageButton
                    android:src="@drawable/line"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="line"
                    android:padding="0dp"
                    android:onClick="SetShape"
                    android:id="@+id/shape2" />
                <ImageButton
                    android:src="@drawable/rectangle"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="rectangle"
                    android:padding="0dp"
                    android:onClick="SetShape"
                    android:id="@+id/shape3" />
                <ImageButton
                    android:src="@drawable/size"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:background="@android:color/white"
                    android:tag="large"
                    android:padding="0dp"
                    android:onClick="SetSize"
                    android:id="@+id/size0" />
                <ImageButton
                    android:src="@drawable/size"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:background="@android:color/white"
                    android:tag="medium"
                    android:padding="0dp"
                    android:onClick="SetSize"
                    android:id="@+id/size1"
                    android:scaleType="fitXY" />
                <ImageButton
                    android:src="@drawable/size"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:background="@android:color/white"
                    android:tag="small"
                    android:padding="0dp"
                    android:onClick="SetSize"
                    android:id="@+id/size2" />
                <ImageButton
                    android:src="@drawable/save"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="rectangle"
                    android:padding="0dp"
                    android:onClick="Save"
                    android:id="@+id/save" />
                <ImageButton
                    android:src="@drawable/undo"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="rectangle"
                    android:padding="0dp"
                    android:onClick="Undo"
                    android:id="@+id/undo" />
                <ImageButton
                    android:src="@drawable/redo"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="redo"
                    android:padding="0dp"
                    android:onClick="Redo"
                    android:id="@+id/redo" />
                <ImageButton
                    android:src="@drawable/delete"
                    android:layout_width="@dimen/btn_w"
                    android:layout_height="@dimen/btn_w"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    android:tag="delete"
                    android:padding="0dp"
                    android:onClick="Clear"
                    android:id="@+id/clear" />
            </LinearLayout>
        </ScrollView>
        <bouboudraw.DrawingView
            android:id="@+id/drawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>